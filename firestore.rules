rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura pública de servicios
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null; // Solo usuarios autenticados pueden escribir
    }
    
    // Permitir escritura pública de citas (para clientes)
    match /appointments/{appointmentId} {
      allow read, write: if true; // Acceso completo para citas
    }
    
    // Permitir lectura/escritura pública de clientes
    match /clients/{clientId} {
      allow read, write: if true;
    }
    
    // Permitir lectura/escritura pública de analytics
    match /business_analytics/{analyticsId} {
      allow read, write: if true;
    }
    
    // Permitir lectura/escritura pública de admins
    match /admins/{adminId} {
      allow read, write: if true;
    }
    
    // Colecciones administrativas solo para usuarios autenticados
    match /machines/{machineId} {
      allow read, write: if request.auth != null;
    }
    
    match /prices/{priceId} {
      allow read, write: if request.auth != null;
    }
    
    // Regla de respaldo para documentos no especificados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
